/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Taxi Gestion application",
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@features/authentication": ["src/features/authentication"],
      "@features/aws": ["src/features/aws"],
      "@features/common": ["src/features/common"],
      "@features/dashboard": ["src/features/dashboard"],
      "@features/common/place": ["src/features/common/place"],
      "@features/planning": ["src/features/planning"],
      "@features/public": ["src/features/public"],
      "@features/common/recurrence": ["src/features/common/recurrence"],
      "@features/common/driver": ["src/features/common/driver"],
      "@features/common/regular": ["src/features/common/regular"],
      "@features/common/client": ["src/features/common/client"],
      "@features/common/journey": ["src/features/common/journey"],
      "@definitions": ["src/definitions"],
      "@codecs": ["src/codecs"]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "useDefineForClassFields": false,
    "lib": ["es2022", "dom"],
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "incremental": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
